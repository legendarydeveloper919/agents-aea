{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for the connection configuration file.",
    "additionalProperties": false,
    "type": "object",
    "required": ["name", "supported_protocols", "config"],
    "properties": {
        "name": {"type": "string"},
        "supported_protocols": {
            "type": "array",
            "items": {"type": "string"}
        },
        "config": {"type": "object"}
    }
}
