{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "requirement": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9._-]*[A-Za-z0-9])($|(( *(~=|==|>=|<=|!=|<|>) *)([1-9][0-9]*!)?(0|[1-9][0-9]*)(\\.(0|[1-9][0-9]*))*((a|b|rc)(0|[1-9][0-9]*))?(\\.post(0|[1-9][0-9]*))?(\\.dev(0|[1-9][0-9]*))?)?)$"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9._-]*[A-Za-z0-9])$": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "index": {
                  "type": "string",
                  "pattern": "^http[s]?://(?:[a-zA-Z]|[0-9]|[$-_@.&+]|[!*\\(\\),]|(?:%[0-9a-fA-F][0-9a-fA-F]))+$"
                },
                "git": {
                  "type": "string",
                  "pattern": "^http[s]?://(?:[a-zA-Z]|[0-9]|[$-_@.&+]|[!*\\(\\),]|(?:%[0-9a-fA-F][0-9a-fA-F]))+$"
                },
                "ref": {
                  "type": "string",
                  "pattern": "^(?!@$|build-|/|.*([/.]\\.|//|@\\{|\\\\))[^\\000-\\037\\177 ~^:?*[]+/[^\\000-\\037\\177 ~^:?*[]+(?<!\\.lock|[/.])$"
                }
              }
            }
          },
          "maxProperties": 1,
          "minProperties": 1
        }
      ]
    },
    "resource_name": {
      "type": "string",
      "pattern": "[a-zA-Z_][a-zA-Z0-9_]*"
    }
  }
}