{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for the skill configuration file.",
    "additionalProperties": false,
    "type": "object",
    "required": [
        "name",
        "authors",
        "version",
        "license",
        "url",
        "protocols"
    ],
    "properties": {
        "name": {"type": "string"},
        "authors": {"type": "string"},
        "version": {"type": "string"},
        "license": {"type": "string"},
        "url": {"type": "string"},
        "protocols": {
            "type": "array",
            "uniqueItems": true,
            "items": {"type": "string"}
        },
        "handlers": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": ["handler"],
              "properties": {
                "handler": { "$ref": "#/definitions/handler" }
              }
            }
        },
        "behaviours": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": ["behaviour"],
              "properties": {
                "behaviour": { "$ref": "#/definitions/behaviour" }
              }
            }
        },
        "tasks": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "required": ["task"],
              "properties": {
                "task": { "$ref": "#/definitions/task" }
              }
            }
        },
        "dependencies": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "pattern": "([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9._-]*[a-zA-Z0-9])( *(~=|==|>=|<=|!=|<|>) *v?(?:(?:(?P<epoch>[0-9]+)!)?(?P<release>[0-9]+(?:\\.[0-9]+)*)(?P<pre>[-_\\.]?(?P<pre_l>(a|b|c|rc|alpha|beta|pre|preview))[-_\\.]?(?P<pre_n>[0-9]+)?)?(?P<post>(?:-(?P<post_n1>[0-9]+))|(?:[-_\\.]?(?P<post_l>post|rev|r)[-_\\.]?(?P<post_n2>[0-9]+)?))?(?P<dev>[-_\\.]?(?P<dev_l>dev)[-_\\.]?(?P<dev_n>[0-9]+)?)?)(?:\\+(?P<local>[a-z0-9]+(?:[-_\\.][a-z0-9]+)*))?)?$"
            }
        }
    },
    "definitions": {
        "behaviour": {
            "type": "object",
            "required": ["class_name", "args"],
            "properties": {
                "class_name": {"type": "string"},
                "args": {"type": "object"}
            }
        },
        "task": {
            "type": "object",
            "required": ["class_name", "args"],
            "properties": {
                "class_name": {"type": "string"},
                "args": {"type": "object"}
            }
        },
        "handler": {
            "type": "object",
            "required": ["class_name", "args"],
            "properties": {
                "class_name": {"type": "string"},
                "args": {"type": "object"}
            }
        }
    }
}
