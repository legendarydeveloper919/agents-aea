{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for the agent configuration file.",
    "additionalProperties": false,
    "type": "object",
    "required": ["aea_version", "agent_name", "connections", "default_connection", "protocols", "skills"],
    "properties": {
        "aea_version": {"type": "string"},
        "agent_name": {"type": "string"},
        "connections": {
            "type": "array",
            "uniqueItems": true,
            "items": {"type": "string"}
        },
        "default_connection": {"type": "string"},
        "protocols": {
            "type": "array",
            "items": {"type": "string"}
        },
        "skills": {
            "type": "array",
            "uniqueItems": true,
            "items": {"type": "string"}
        }
    }
}